<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend PO form to show link back to Purchase Request -->
    <record id="purchase_order_form_inherit_request" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.request</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add Purchase Request stat button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_purchase_request"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-clipboard"
                        invisible="purchase_request_count == 0">
                    <field name="purchase_request_count" widget="statinfo"
                           string="Request"/>
                </button>
            </xpath>

            <!-- Add Purchase Request field in Other Information tab -->
            <xpath expr="//page[@name='purchase_delivery_invoice']//group[@name='other_info']" position="inside">
                <field name="purchase_request_id" readonly="1"
                       invisible="not purchase_request_id"/>
            </xpath>

        </field>
    </record>

</odoo>
