<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Security Groups -->
    <record id="group_purchase_request_user" model="res.groups">
        <field name="name">Purchase Request User</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
        <field name="comment">Can create and submit purchase requests.</field>
    </record>

    <record id="group_purchase_request_manager" model="res.groups">
        <field name="name">Purchase Request Manager</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
        <field name="implied_ids" eval="[(4, ref('group_purchase_request_user'))]"/>
        <field name="comment">Can approve/reject purchase requests and create RFQs.</field>
    </record>

    <!-- Make all internal users Purchase Request Users by default -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_purchase_request_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="purchase_request_rule_all" model="ir.rule">
        <field name="name">Purchase Request: See All (Procurement)</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_request_rule_own" model="ir.rule">
        <field name="name">Purchase Request: Own Only (Employee)</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_purchase_request_user'))]"/>
    </record>

    <record id="purchase_request_rule_department" model="ir.rule">
        <field name="name">Purchase Request: Department (Manager)</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_purchase_request_manager'))]"/>
    </record>

</odoo>
