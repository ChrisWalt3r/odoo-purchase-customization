<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================================ -->
    <!--  Select Winner Wizard Form View  -->
    <!-- ================================ -->
    <record id="view_select_winner_wizard_form" model="ir.ui.view">
        <field name="name">purchase.rfq.select.winner.wizard.form</field>
        <field name="model">purchase.rfq.select.winner.wizard</field>
        <field name="arch" type="xml">
            <form string="Award Bid">
                <group>
                    <group string="Bid Details">
                        <field name="rfq_id" readonly="1"/>
                        <field name="bid_id" readonly="1"/>
                        <field name="vendor_id" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="amount_total" widget="monetary" readonly="1"/>
                    </group>
                    <group string="Options">
                        <field name="use_bid_pricing"/>
                    </group>
                </group>
                <group>
                    <field name="notes" placeholder="Award justification or notes..."/>
                </group>
                <footer>
                    <button name="action_confirm_winner"
                            type="object"
                            string="Confirm Award &amp; Create PO"
                            class="btn-primary"
                            icon="fa-trophy"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
